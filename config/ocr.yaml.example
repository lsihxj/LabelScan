# OCR配置
ocr:
  default_mode: "local"  # local/cloud
  
  # 本地Tesseract配置
  local:
    tesseract_cmd: null  # null表示使用系统PATH中的tesseract
    lang: "eng+chi_sim"  # 支持英文和简体中文
    psm_modes:  # Page Segmentation Mode
      - 6  # 单块文本
      - 4  # 单列文本
      - 11  # 稀疏文本
    oem: 3  # OCR Engine Mode (3=默认,基于LSTM)
    
  # 云端OCR配置(需要配置API密钥)
  cloud:
    enabled: false
    provider: "none"  # none/aliyun/tencent/azure
    api_key: ""
    api_secret: ""
    region: ""
    timeout: 5  # 秒
    retry_times: 3
    retry_interval: 1  # 秒

# 字段解析规则
field_patterns:
  part_number:
    - "P/N:"
    - "Part Number:"
    - "PN:"
  quantity:
    - "QTY:"
    - "Quantity:"
    - "Q:"
  date:
    - "Date:"
    - "DATE:"
  lot:
    - "LOT:"
    - "Batch:"
    - "BATCH:"
